# Maintainer: Manuel Schneider  <manuelschneid3r at googles mail>
pkgname=albert
pkgver=0.6.1.nsk
pkgrel=1
pkgdesc="A DE agnostic omnilauncher."
arch=('i686' 'x86_64')
url="https://github.com/eriknelson/albert"
license=('GPL')
depends=('qt5-base' 'libx11' 'muparser' 'qt5-x11extras')
makedepends=('cmake' 'qt5-base' 'qt5-tools')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(git+https://github.com/eriknelson/albert.git)
noextract=()
md5sums=('SKIP')
branch="dev/$pkgver"

build() {
  echo "Attempting to checkout: $branch"
  pushd $srcdir/$pkgname && git checkout $branch && popd
  mkdir -p "${srcdir}/${pkgname}/build"
  cd "${srcdir}/${pkgname}/build"
  cmake ".." \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}/${pkgname}/build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
